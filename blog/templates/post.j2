    {% include "light-dark-theme.j2" %}
    {% include "highlight.j2" %}
    {% include "layout.j2" %}
    {% include "fonts.j2" %}

    <style>
        .header-image {
            /*position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            */
            width: 100%;
            height: auto;
            object-fit: contain;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <header class="header">
            {# <img src="{{ cover_image }}" class="header-image"> #}
        </header>
        <article class="main">
            <div class="body-container">
                <div class="body-header">Header</div>
                <div class="body-content">
                    <h1>{{ title }}</h1>
                    <h3>{{ subtitle }}</h3>
                    <h4><i>{{ date }}</i></h3>

                    {{ body }}
                </div>
                <div class="body-footer">
                    {% include "rss.j2" %}
                </div>
            </div>

        </article>
        <aside class="aside aside-1"></aside>
        <aside class="aside aside-2"></aside>
        <footer class="footer"></footer>
    </div>


    <!-- Comments do not load locally -->
    {% include "utterances.j2" %}

    {% include "ko-fi.j2" %}
</body>

</html>