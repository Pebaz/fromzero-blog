                <div class="body-header">
                    <a href="../pages/index.html">From Zero Systems</a>
                </div>
                <div class="body-content">
                    <h1>{{ title }}</h1>
                    <h3>{{ subtitle }}</h3>
                    <h4><i>{{ date }}</i></h3>

                    {{ body }}
