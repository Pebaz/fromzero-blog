    <style>
        .background {
            position: relative;
            height: 100vh;
            overflow: hidden;
        }

        .background img {
            position: fixed;
            left: 50%;
            top: 0;
            transform: translate(-50%, 0);
            min-width: 100%;
            min-height: 100%;
            z-index: -1;
            border-radius: 0;
        }
    </style>
